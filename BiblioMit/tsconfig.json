{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": [
      "ES2015",
      "ES5",
      "DOM"
    ],
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    //"alwaysStrict": true,
    "outDir": "wwwroot/js",
    //"strict": true,
    //"strictBindCallApply": true,
    //"strictFunctionTypes": true,
    //"strictNullChecks": true,
    //"strictPropertyInitialization": true,
    "removeComments": true,
    "rootDir": "scripts/",
    "sourceMap": true,
    "sourceRoot": "scripts/",
    "target": "ESNext",
    "typeRoots": [ "node_modules/@types", "scripts/types" ]
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "compileOnSave": true
}
