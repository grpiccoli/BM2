{
  "compilerOptions": {
    "lib": [
      "ES2015",
      "ES5",
      "DOM"
    ],
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    //"alwaysStrict": true,
    "outDir": "wwwroot/js",
    "sourceRoot": "scripts/",
    "rootDir": "scripts/",
    //"strict": true,
    //"strictBindCallApply": true,
    //"strictFunctionTypes": true,
    //"strictNullChecks": true,
    //"strictPropertyInitialization": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES5"
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "compileOnSave": true
}
