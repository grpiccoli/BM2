@{
    ViewData["Title"] = "About";
    ViewData["Message"] = Localizer["Technological Management Platform for Mussel Farming Sector"].Value;
}

<partial name="_Libs" model='new List<string> { "nanogallery2" }' />

<div class="row">
    <div class="col-12 col-md-6">
        <a class="float-left" href="@Url.Action("Contact", "Home", null, null)" target="_blank" rel="noopener">
            <img src="~/images/ico/bibliomit.svg" alt="BiblioMit" class="img-fluid" style="max-height:4em" />
            <h1 class="float-right align-bottom">
                BiblioMit
            </h1>
        </a>
    </div>
    <div class="col-6 col-md-3">
        <a class="float-left" href="https://www.corfo.cl/" target="_blank" rel="noopener">
            <img src="~/images/ico/corfo.svg" alt="corfo" class="img-fluid" style="max-height:4em"/>
        </a>
    </div>
    <div class="col-6 col-md-3">
        <a class="float-left" href="http://www.mejillondechile.cl/" target="_blank" rel="noopener">
            <img src="~/images/ico/mejillondechile.min.png" alt="mejillon de chile" class="img-fluid" style="max-height:4em"/>
        </a>
    </div>
</div>
<div class="row">
    <div class="col-12 col-md-6">
        <h3>@ViewData["Message"]</h3>
        <p class="text-justify">
            @Localizer["A project from the <strong>Guild Association of Mussel Farmers of Chile</strong>"]
            (<strong>
                <a target="_blank" href="http://www.amichile.com/" rel="noopener">
                    <img src="~/images/ico/amichile.min.png" alt="amichile" class="img-fluid" style="max-height:1.5em" />
                    AmiChile
                </a>
            </strong>),
            @Localizer["financed by the <strong>Production Development Coorporation of Chile</strong>"]
            (<strong>
                <a target="_blank" href="https://www.corfo.cl/" rel="noopener">
                    <img src="~/images/ico/corfo.min.png" alt="corfo" class="img-fluid" style="max-height:1.5em" />
                    CORFO
                </a>
            </strong>),
            @Localizer[@"within the framework of project <i>Code 16 Node 70434 ""Science and Technology Node for the Mussel Farming Industry""</i> of the <strong>Strategic Regional Program for the Mussel Indutry</strong>"]
            (<strong>
                <a target="_blank" href="http://www.mejillondechile.cl/" rel="noopener">
                    <img src="~/images/ico/mejillondechile.min.png" alt="mejillon de chile" class="img-fluid" style="max-height:1.5em" />
                    MejillondeChile
                </a>
            </strong>)
            @Localizer["for the <strong>Technological Institute of Mussel Farming</strong>"]
            (<strong>
                <a target="_blank" href="http://www.intemit.cl/" rel="noopener">
                    <img src="~/images/ico/intemit.min.png" alt="intemit" class="img-fluid" style="max-height:1.5em" />
                    INTEMIT
                </a>
            </strong>)
            @Localizer["and developed by <strong>Guillermo Rodriguez Piccoli</strong>"]
            (<strong>
                <a target="_blank" href="https://www.linkedin.com/in/guillermo-rodriguez-piccoli/" rel="noopener">
                    <img src="~/images/socmedia/LinkedIn.svg" alt="epic solutions" class="img-fluid" style="max-height:1.5em" />
                </a>
            </strong>)
            @Localizer["at <strong>Epic Solutions Consulting</strong>"]
            (<strong>
                <a target="_blank" href="http://www.epicsolutions.cl" rel="noopener">
                    <img src="~/images/ico/epic.min.png" alt="epic solutions" class="img-fluid" style="max-height:1.5em" />
                    Epic Solutions
                </a>
            </strong>).
            @Localizer["and managed by the <strong>Centre of Applied Research for Aquaculture and Fishery</strong>"]
            (<strong>
                <a target="_blank" href="http://www.capia.cl" rel="noopener">
                    <img src="~/images/ico/capia.min.png" alt="capia" class="img-fluid" style="max-height:1.5em" />
                    CAPIA
                </a>
            </strong>)
            @Localizer["of <strong>Saint Thomas University Chile</strong>"]
            (<strong>
                <a target="_blank" href="http://www.ust.cl" rel="noopener">
                    <img src="~/images/ico/ust.min.png" alt="ust" class="img-fluid" style="max-height:1.5em" />
                    UST
                </a>
            </strong>)
            <br />
        </p>
    </div>
    <div class="col-12 col-md-6">
        <iframe src="https://www.youtube.com/embed/Xx-qk-a4-fA" frameborder="0" allow="encrypted-media; autoplay" allowfullscreen style="width:100%;min-height:25vw"></iframe>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <h3>@Localizer["Objective"]:</h3>
        <p class="text-justify"><strong>BiblioMit</strong> @Localizer["is a management tool and connection portal between the mussel farming industry, academia, research and technology centers and institutes that have an essential role in the development of Applied Sciences for the Mussel Farming world"]</p>
        <p><strong>BiblioMit</strong> @Localizer["Consists of"]:</p>
        <ul class="text-justify fa-ul correct-ul">
            <li><span class="fa-li"><i class="fas fa-comments fa-tw logo comments"></i></span>
                @Localizer["A forum for connection and exchange of ideas between stakeholders"]
            </li>
            <li><span class="fa-li"><i class="fas fa-search fa-tw logo search"></i></span>
                @Localizer["A search engine for multiple sources of scientific literature for the mussel farming industry at a national level (downloadable in digital format), including"]:
                <ul>
                    <li>
                        @Localizer["List of stakeholders and their contact details"]
                    </li>
                    <li>
                        @Localizer["Search engine of nationally published academical thesis"]
                    </li>
                    <li>
                        @Localizer["Search engine of scientific literature powered by Google Scholar"]
                    </li>
                    <li>
                        @Localizer["Search engine of nationally published research and development projects cathegorized by funding"]
                    </li>
                    <li>
                        @Localizer["Search engine of national grants and funding sources for research and development"]
                    </li>
                </ul>
            </li>
            <li><span class="fa-li"><i class="fas fa-map-marker-alt fa-tw logo map-marker-alt"></i></span>
                @Localizer["A collection of georeferenced data, including"]:
                <ul>
                    <li>
                        @Localizer["Oceanografic data such as Ocean Surface Temperature (OST), Ocean Acidification, Oxigen content, Salinity, histological findings and concentrations, and much more"]
                    </li>
                    <li>
                        @Localizer["Map of all research centers that have worked in mussel research"]
                    </li>
                    <li>
                        @Localizer["Map of all mussel farms, contacts and oceanografic data (paid service)"]
                    </li>
                </ul>
            </li>
            <li><span class="fa-li"><i class="fas fa-camera-retro fa-tw logo camera-retro"></i></span>
                @Localizer["Histopathological Database"]:
                <ul>
                    <li>
                        @Localizer["Catalogue of histopathological findings that affect the species"] <i>Mytilus chilensis</i>
                    </li>
                    <li>
                        @Localizer["Histopathological database of catalogued findings georeferenced (paid service)"]
                    </li>
                </ul>
            </li>
            <li><span class="fa-li"><i class="fas fa-chart-line fa-tw logo chart-line"></i></span>
                @Localizer["Digest"]:
                <ul>
                    <li>
                        @Localizer["Biyearly digest report of production and oceanografic statistics"]
                    </li>
                </ul>
            </li>
        </ul>
    </div>
</div>
<div class="row justify-content-center">
