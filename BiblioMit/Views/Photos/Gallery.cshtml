@{
    ViewData["Title"] = Localizer["Gallery"];
}

@section Styles{
    <style>
        header {
            height: calc(100vh - 66px);
        }

        iframe {
            width: 100vw;
            height: calc(100vh - 66px);
        }

        footer {
            background: linear-gradient(transparent,black) !important;
            opacity: 0.5;
        }
    </style>
}

@section Scripts{ 
<script>
    document.addEventListener("DOMContentLoaded", function () {
        $("footer a").removeClass("text-dark").addClass("text-light");
        $("img[alt='epic solutions']").attr("src", "epic_light_hor.svg");
    });
</script>
}

@section Header{
    <iframe src="~/colecci-n-virtual/index.html"
            title="@Localizer["Virtual Collection"]"></iframe>
}
