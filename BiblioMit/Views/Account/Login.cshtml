@using System.Collections.Generic
@using System.Linq
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = Localizer["Log in"];
}
<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4 col-md-offset-1">
        <section>
            <h5>@Localizer["Use another service to log in."]</h5>
            @{
                var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
                if (loginProviders.Count == 0)
                {
                    <div>
                        <p>
                            @Localizer["There are no external authentication services configured. Please contact your web administrator."]
                        </p>
                    </div>
                }
                else
                {
                    var colors = new Dictionary<string, string>
                        {
                            {"Facebook","#3b5998" },
                            { "Google", "#dc4d40"},
                            { "LinkedIn","#0274b3"},
                            { "Microsoft","#ffffff"},
                            { "Twitter", "#1da1f2"}
                        };
                        <form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                            <div>
                                <p style="margin-bottom:20px">
                                    @foreach (var provider in loginProviders)
                                    {
                                        var bg = colors[provider.Name];
                                        var color = bg == "#ffffff" ? "#000000" : bg;
                                        var src = $"/images/{provider.Name}.svg";
                                        var style = $"text-align:left; color:{color}; background-color:{bg}; margin-bottom: 5px;";
                                        <button type="submit" id="@provider.Name"
                                                class="btn-group-justified btn btn-default text-left text-primary primary-btn col-xs-11"
                                                name="provider" value="@provider.Name"
                                                title="Iniciar sesión usando tu cuenta @provider.Name"
                                                style="@style">
                                            <img width="45" height="45" src="@src" hspace="20" />
                                            <strong>@Localizer["Login using"] @provider.Name</strong>
                                        </button>
                                    }
                                </p>
                            </div>
                        </form>
                }
            }
        </section>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-3 col-md-offset-2">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h5>@Localizer["Use a local account to log in."]</h5>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EmailLogin">@Localizer["Email"]</label>
                    <input asp-for="EmailLogin" class="form-control" />
                    <span asp-validation-for="EmailLogin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordLogin">@Localizer["Password"]</label>
                    <input asp-for="PasswordLogin" class="form-control" />
                    <span asp-validation-for="PasswordLogin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMeLogin">
                            <input asp-for="RememberMeLogin" />
                            @Localizer["Remember me?"]
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">@Localizer["Log in"]</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-action="ForgotPassword">@Localizer["Forgot your password?"]</a>
                    </p>
                    <p>
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">@Localizer["Register as a new user?"]</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />